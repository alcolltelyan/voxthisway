<Page x:Class="VoxThisWay.App.SettingsPages.AudioSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Audio">

    <StackPanel Margin="24" Orientation="Vertical">
        <ui:Card>
            <StackPanel>
                <TextBlock Text="Input device" FontSize="16" FontWeight="SemiBold" />

                <StackPanel Margin="0,12,0,0">
                    <DockPanel>
                        <ComboBox x:Name="DeviceCombo" Width="360" DisplayMemberPath="DisplayName" SelectionChanged="DeviceCombo_SelectionChanged" />
                        <ui:Button x:Name="TestButton" Content="Test" Width="90" Margin="12,0,0,0" Click="TestDevice_Click" />
                    </DockPanel>
                </StackPanel>
            </StackPanel>
        </ui:Card>
    </StackPanel>
</Page>
