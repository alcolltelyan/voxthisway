<Page x:Class="VoxThisWay.App.OnboardingPages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="Welcome"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <StackPanel Margin="24" Orientation="Vertical">
        <TextBlock Text="Welcome to VoxThisWay" FontSize="20" FontWeight="SemiBold" />
        <TextBlock Text="Step 1 of 5 — Quick setup" Margin="0,8,0,0" TextWrapping="Wrap" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
        <TextBlock Text="This quick setup will help you get dictation working reliably." Margin="0,8,0,0" TextWrapping="Wrap" />

        <TextBlock Margin="0,12,0,0" TextWrapping="Wrap">
            <Run Text="In the next minute, we’ll:" />
        </TextBlock>

        <StackPanel Margin="0,8,0,0">
            <TextBlock Text="1) Choose your microphone" TextWrapping="Wrap" />
            <TextBlock Text="2) Choose your push-to-talk hotkey" TextWrapping="Wrap" Margin="0,4,0,0" />
            <TextBlock Text="3) Run setup checks (Whisper local + Azure optional)" TextWrapping="Wrap" Margin="0,4,0,0" />
            <TextBlock Text="4) Review and finish" TextWrapping="Wrap" Margin="0,4,0,0" />
        </StackPanel>

        <TextBlock Margin="0,12,0,0" TextWrapping="Wrap" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
            You can re-open this wizard later from the tray menu (Onboarding…).
        </TextBlock>
    </StackPanel>
</Page>
