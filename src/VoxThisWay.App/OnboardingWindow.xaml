<Window x:Class="VoxThisWay.App.OnboardingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VoxThisWay – First-Time Setup"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock Text="Welcome to VoxThisWay" FontSize="18" FontWeight="Bold" />
            <TextBlock Text="Let’s quickly verify your setup for local Whisper and Azure Speech (optional)." Margin="0,4,0,0" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,12">
            <GroupBox Header="Whisper local (offline engine)" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock x:Name="WhisperStatusIcon"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,8,0" />
                        <TextBlock x:Name="WhisperStatusText" TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Azure Speech (cloud engine, optional)" Margin="0,0,0,8">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock x:Name="AzureStatusIcon"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,8,0" />
                        <TextBlock x:Name="AzureStatusText" TextWrapping="Wrap" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Next steps" Margin="0,0,0,8">
                <StackPanel Margin="8" Orientation="Vertical">
                    <TextBlock Text="You can adjust the input device, test your microphone, change the hotkey, and configure engines in Settings." TextWrapping="Wrap" Margin="0,0,0,8" />
                    <TextBlock Text="You can reopen this wizard later from the tray menu (Onboarding…)." TextWrapping="Wrap" />
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <DockPanel Grid.Row="2" LastChildFill="False" Margin="0,8,0,0">
            <CheckBox x:Name="DontShowAgainCheckBox" Content="Don’t show this again" VerticalAlignment="Center" />
            <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button Content="Open Settings" Width="110" Margin="0,0,8,0" Click="OpenSettings_Click" />
                <Button Content="Re-run checks" Width="110" Margin="0,0,8,0" Click="RerunChecks_Click" />
                <Button Content="Close" Width="80" Click="Close_Click" />
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
